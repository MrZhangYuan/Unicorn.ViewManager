<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Unicorn.ViewManager">

    <Style TargetType="{x:Type vm:DockRootControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type vm:DockRootControl}">
                    <vm:DockTarget vm:DockTarget.DockOrientation="Outter"
                                   Background="Transparent"
                                   DockTargetType="Outside"
                                   FindMode="Always">
                        <vm:DockTarget vm:DockTarget.DockOrientation="Center"
                                       Background="Transparent"
                                       DockTargetType="Center"
                                       FindMode="First">
                            <ContentPresenter Content="{TemplateBinding DockGroup}" />
                        </vm:DockTarget>
                    </vm:DockTarget>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Unicorn.ViewManager">

    <Style TargetType="{x:Type vm:DockPreviewWindow}">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type vm:DockPreviewWindow}">
                    <Canvas>
                        <Grid
                            x:Name="DockPreviewGrid"
                            Width="{TemplateBinding FrameworkElement.Width}"
                            Height="{TemplateBinding FrameworkElement.Height}"
                            Opacity="0.3"
                            ZIndex="1">
                            <Border
                                Background="{StaticResource {x:Static SystemColors.HotTrackBrushKey}}"
                                BorderBrush="{StaticResource {x:Static SystemColors.GrayTextBrushKey}}"
                                BorderThickness="5" />
                        </Grid>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
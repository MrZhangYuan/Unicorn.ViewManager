<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Unicorn.ViewManager">
    <Style x:Key="{x:Type vm:SplitterItemsControl}" TargetType="{x:Type vm:SplitterItemsControl}">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type vm:SplitterItemsControl}">
                    <vm:SplitterPanel IsItemsHost="True" Orientation="{TemplateBinding vm:SplitterItemsControl.Orientation}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Control.IsTabStop" Value="False" />
    </Style>
</ResourceDictionary>